<%= form_tag login_path, method: :post do %>
    <li>
      <%= email_field_tag :email, nil, placeholder: t('misc.form.email.one', count: 1) %>
    </li>
    <li>
      <%= password_field_tag :password, nil, placeholder: t('misc.form.password.one', count: 1) %>
    </li>
    <li class="divider"></li>
    <li>
      <%= button_tag t('misc.form.log in.one', count: 1), class: 'btn btn-warning' %>
    </li>
    <li>
      <%= link_to t('misc.no account.one', count: 1), new_user_path %>
    </li>
<% end %>