<h4><%= object.model %></h4>
<p><strong><%= t('misc.form.serial number.one', count: 1) %>:</strong> <%= object.guarantee_number %></p>
<p><strong><%= t('misc.form.city of purchase.one', count: 1) %>:</strong> <%= object.city %></p>
<p><strong><%= t('misc.form.place of purchase.one', count: 1) %>:</strong> <%= object.place %></p>
<p><strong><%= t('misc.form.date of purchase.one', count: 1) %>:</strong> <%= object.date_of_purchase %></p>
<%= form_tag receipt_path(object.id), controller: 'receipts', method: :delete do %>
    <%= submit_tag t('misc.form.delete.one', count: 1), class: 'btn btn-small btn-danger' %>
<% end %>