<br><br>
<div class="container">
  <div class="row " >
    <div class="offset3 span6 ">
      <div class="formulario-usuario">
        <%= form_tag submit_contact_path, method: :post, class: 'formulario-general' do %>
            <div class="control-group">
              <%= text_field_tag :full_name, nil, placeholder: t('misc.form.full name.one', count: 1) %>
              <%= email_field_tag :email, nil, placeholder: t('misc.form.email.one', count: 1) %>
              <%= text_area_tag :message, nil, placeholder: t('misc.form.message.one', count: 1), rows: 5  %>
            </div>
            <div class="control-group text-center">
              <%= submit_tag t('misc.form.send.one', count: 1), class: 'btn btn-warning' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>